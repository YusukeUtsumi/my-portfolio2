---
/** Props 型を定義 */
type Align = 'center' | 'left';
type Tone  = 'dim' | 'bright';
interface Props {
    lines: string[];
    align?: Align;
    tone?: Tone;
    glow?: string;
}

/** Astro.props に型を付与（デフォルト値もここで） */
const {
    lines = [],
    align = 'center',
    tone  = 'dim',
    glow  = ''
} = Astro.props as Props;
---
<section
    class={`poetic ${align === 'left' ? 'po-left' : 'po-center'} ${tone === 'bright' ? 'po-bright' : 'po-dim'}`}
    data-poetic
    style={glow ? `--po-glow:${glow}` : undefined}
>
    <div class="po-glow" aria-hidden="true"></div>

    <div class="po-wrap">
        {lines.map((text: string) => (
            <p class="po-line">{text}</p>
        ))}
    </div>
</section>