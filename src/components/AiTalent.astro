---
/**
 * AiTalent.astro
 * 非対称レイアウト：
 *  - Risa：1枚を大きく（現実の光）
 *  - Lilia：2枚を小さく（幻想の残響）
 */

export interface ImageItem {
    src: string;
    alt?: string;
    width?: number;
    height?: number;
}

export interface Props {
    risa?: ImageItem[];
    lilia?: ImageItem[];
    heading?: string;
    subJa?: string;
    subEn?: string;
}

const {
    risa = [
        { src: "/images/risa_gallery_05.webp", alt: "Risa main", width: 1280, height: 1706 }
    ],
    lilia = [
        { src: "/images/lilia_gallery_04.webp", alt: "Lilia 1", width: 1024, height: 1280 },
        { src: "/images/lilia_gallery_01.webp", alt: "Lilia 2", width: 1024, height: 1280 }
    ],
    heading = "Risa / Lilia",
    subJa = "AIで描く、新しい広告体験",
    subEn = "A new kind of advertising, drawn by AI."
} = Astro.props;

const risaMain = risa[0];
const liliaA = lilia[0];
const liliaB = lilia[1];
---

<section id="ai-talent" class="ai-section">
    <header class="ai-head">
        <p class="eyebrow">AI TALENT</p>
        <h2 class="ai-title">{heading}</h2>
        <p class="ai-sub">
            <span class="ja">{subJa}</span>
            <span class="en"><em>{subEn}</em></span>
        </p>
    </header>

    <div class="ai-grid">
        <!-- Risa：大きい1枚 -->
        <figure class="risa">
            <img
                src={risaMain.src}
                alt={risaMain.alt ?? "Risa"}
                width={risaMain.width ?? 1280}
                height={risaMain.height ?? 1706}
                decoding="async"
                loading="lazy"
            />
            <figcaption class="cap">
                Risa <small>— the ordinary, softly awake</small>
            </figcaption>
        </figure>

        <!-- Lilia：小さめ2枚 -->
        <div class="lilia">
            {liliaA && (
                <figure class="lilia-item">
                    <img
                        src={liliaA.src}
                        alt={liliaA.alt ?? "Lilia 1"}
                        width={liliaA.width ?? 1024}
                        height={liliaA.height ?? 1280}
                        decoding="async"
                        loading="lazy"
                    />
                </figure>
            )}
            {liliaB && (
                <figure class="lilia-item">
                    <img
                        src={liliaB.src}
                        alt={liliaB.alt ?? "Lilia 2"}
                        width={liliaB.width ?? 1024}
                        height={liliaB.height ?? 1280}
                        decoding="async"
                        loading="lazy"
                    />
                </figure>
            )}
            <p class="cap cap--lilia">
                Lilia <small>— the dream, quietly lucid</small>
            </p>
        </div>
    </div>
</section>
