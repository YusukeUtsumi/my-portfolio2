---
import xIconUrl from "../assets/x.svg?url";
import linkedinIconUrl from "../assets/linkedin.svg?url";
---

<section id="about" class="about-section" aria-labelledby="about-title">
    <script type="module">
        document.addEventListener("DOMContentLoaded", () => {
            const sec = document.querySelector(".about-section");
            if (!sec) return;
            const io = new IntersectionObserver(([e]) => {
                if (e.isIntersecting) {
                    sec.classList.add("is-inview");
                    io.disconnect();
                }
            }, { threshold: 0.15 });
            io.observe(sec);
        });
    </script>

    <h2 id="about-title" class="about-title">About Me</h2>
    <div class="about-content">
        <p class="about-name">Yusuke Utsumi</p>
        <p class="about-role">AI Concept Artist / Conceptual Engineer</p>
        <p class="about-intro">
            Based in Kushiro, Hokkaido, Japan<br/>
            Exploring the boundary where art and system intertwine â€”<br/>  
            designing emotions, logic, and light for the age of AI.
        </p>
        <div class="about-links">
            <a href="https://x.com/UtsumiYusuke" target="_blank" rel="noopener" aria-label="X">
                <img src={xIconUrl} alt="X" width="28" height="28" />
            </a>
            <a href="https://www.linkedin.com/in/yusuke-utsumi-08b7a6322/" target="_blank" rel="noopener" aria-label="LinkedIn">
                <img src={linkedinIconUrl} alt="LinkedIn" width="28" height="28" />
            </a>
        </div>
        <div class="about-contact">
            <a
                href="https://forms.gle/frPzEzsn6tKiZ6c99"
                target="_blank"
                rel="noopener"
                class="connect-btn"
                aria-label="Open contact form on Tally (new tab)"
            >connect</a>
        </div>
    </div>
</section>
